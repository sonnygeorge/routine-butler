{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: run.py --testing",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--testing"]
        },
        {
            "name": "Python: Current File from root",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        }
    ]
}
